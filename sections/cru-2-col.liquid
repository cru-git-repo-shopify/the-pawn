<style>
  #{{ section.id }}{
    background-color: {{ section.settings.column_bg_color }};
    background-image: url({{ section.settings.bg_image | img_url: '1920x1080' }});
    max-width: {{ section.settings.max_width }}{{ section.settings.max_width_unit }};
    margin: {{ section.settings.margin_top }}px auto {{ section.settings.margin_bottom }}px;
  }
</style>
{%  if section.settings.is_reversed %}
    <div class="cru-2-col col-reversed {{ section.settings.class }}" id="{{ section.id }}">
{% else %}
    <div class="cru-2-col {{ section.settings.class }}" id="{{ section.id }}">
{% endif %}
    {% for block in section.blocks %}
      {% if block.type == 'text_column' %}
        <div class="text-column">
            <div class="text-col-inner">
                <h2 style="font-size: {{ block.settings.heading_font_size }}px; color: {{ block.settings.heading_color }};">{{ block.settings.heading }}</h2>
                <div class="text-content" style="font-size: {{ block.settings.content_font_size }}px; color: {{ block.settings.content_color }};">{{ block.settings.column_content }}</div>
                {% if block.settings.bottom_image %}
                  <img src="{{ block.settings.bottom_image | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
                {% endif %}
                {% if block.settings.show_button %}
                    <a href="{{ block.settings.button_link }}" class="btn" style="font-size: {{ block.settings.btn_font_size }}px; color: {{ block.settings.button_text_color }}; background-color: {{ block.settings.button_bg_color }}; border: {{ block.settings.btn_border_width |  append: 'px' }}  {{ block.settings.border_type }} {{block.settings.button_border_color}}; border-radius: {{ block.settings.button_border_radius | append: 'px' }};">{{ block.settings.button_text }}</a>
                {% endif %}
            </div>
        </div>
      {% else %}
        {% if block.settings.type == 'single' %}
          <div class="image-column">
            {% if block.settings.image_1 %}
              <img src="{{ block.settings.image_1 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
            {% endif %}
          </div>
        {% endif %}
        {% if block.settings.type == 'slider' %}
            <div class="image-column">
              <div class="slider">
              {% if block.settings.image_1 %}
                <img src="{{ block.settings.image_1 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
              {% endif %}
              {% if block.settings.image_2 %}
                <img src="{{ block.settings.image_2 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
              {% endif %}
              {% if block.settings.image_3 %}
                <img src="{{ block.settings.image_3 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
              {% endif %}
              {% if block.settings.image_4 %}
                <img src="{{ block.settings.image_4 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
              {% endif %}
              {% if block.settings.image_5 %}
                <img src="{{ block.settings.image_5 | img_url: 'original' }}" alt="{{ block.settings.image_alt }}">
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endif %}
  {% endfor %}
</div>
